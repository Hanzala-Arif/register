<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_71sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/arizonia"
        android:text="    Ismail Arts"
        android:textSize="@dimen/_48sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentBottom="true"

        android:orientation="vertical">

        <EditText
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Order"
            android:inputType="number" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Customer-Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/cnum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Customer-Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Date"
            android:inputType="date" />



        <EditText
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Total"
            android:inputType="number" />

        <EditText
            android:id="@+id/advance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Advance"
            android:inputType="number" />

        <EditText
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"

            android:hint="Balance"
            android:inputType="number" />

        <EditText
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Details"
            android:inputType="textMultiLine" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delieverd" />
        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK" />
        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:onClick="book"
            android:text="Book"
            app:buttonColor="@color/teal_200"
            app:cornerRadius="@dimen/_50sdp"
            app:glowColor="@color/white"
            app:pressedGlowSize="@dimen/_25sdp"
            app:unpressedGlowSize="@dimen/_10sdp" />



    </LinearLayout>



</RelativeLayout>